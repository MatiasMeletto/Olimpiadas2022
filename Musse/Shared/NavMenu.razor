
<div class="top-row ps-3 navbar navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="">Museo Juan Manuel Fangio</a>
		<button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
			<span class="navbar-toggler-icon"></span>
		</button>
	</div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
	<BSNav IsVertical="true">
		<BSNavItem IsActive="true" Url="/Mapas">Mapas</BSNavItem>
		<BSNavItem IsDropdown="true">
			<BSDropdown Class="nabvar">
				<Toggler><BSToggle IsNavLink="true">Stand</BSToggle></Toggler>
				<Content>
					<BSDropdownItem Url="/Formula1">Formula 1</BSDropdownItem>
					<BSDropdownItem Url="/Rally">Rally</BSDropdownItem>
					<BSDropdownItem Url="/Expo">Expo</BSDropdownItem>					
				</Content>
			</BSDropdown>
		</BSNavItem>
		<BSNavItem IsActive="true" Url="/Juegos">Juegos</BSNavItem>
		<BSNavItem IsActive="true" Url="/Reseñas">Reseñas/Comentarios</BSNavItem>
		
	</BSNav>
</div>

@code {
	private bool collapseNavMenu = true;

	private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}
}
